generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//---------------------------------------------------------------------------//

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String
  password String

  // one-to-many Leagues
  leagues League[]
}

model League {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  mode String

  // one-to-many Teams
  teams Team[]

  // many-to-one User
  userId String @unique @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
}

model Team {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  isUser      Boolean
  name        String
  wins        Int
  gamesPlayed Int

  // one-to-many Players
  roster Player[]

  // many-to-one League
  leagueId String @unique @db.ObjectId
  league   League @relation(fields: [leagueId], references: [id])
}

model Player {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  isStarter Boolean

  // many-to-one Team
  fantasyTeamId String @unique @db.ObjectId
  fantasyTeam   Team   @relation(fields: [fantasyTeamId], references: [id])

  // many-to-one Card
  cardId String @unique @db.ObjectId
  card   Card   @relation(fields: [cardId], references: [id])
}

model Card {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  age          Int
  team         String
  height       String
  weight       String
  position     String
  country      String
  lastAttended String
  fantasyPpg   Float
  ppg          Float
  apg          Float
  rpg          Float
  spg          Float
  bpg          Float
  tpg          Float
  mpg          Float
  fgPct        Float
  fg3Pct       Float
  ftPct        Float

  // one-to-many Players
  fantasyPlayers Player[]
}
